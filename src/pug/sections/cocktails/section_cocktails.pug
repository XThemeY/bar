include ../../mixins/cocktailsMixin

section.cocktails-section
	.shopping-cart
		.cart-icon
			+icon("shopping-cart","shop-icons")
		.break-line
		.cart-items-list
		.break-line.upside-down
		.shop-btn
			a.btn.btn-calc(href=bar_calc) #[+icon("pencil","btn-icons")] Калькулятор
	.container
		.cocktail-btns
			button(type="button" data-filter=".all").control-active.btn.btn-cocktail Все
			button(type="button" data-filter=".classic").btn.btn-cocktail Классика
			button(type="button" data-filter=".shots").btn.btn-cocktail Шоты
			button(type="button" data-filter=".limonade").btn.btn-cocktail Лимонады
		.break-line
		.cocktails-list#cocktails-list
