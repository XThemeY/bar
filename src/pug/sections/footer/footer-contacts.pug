include ../../mixins/svgMixin
include ../../layouts/vars

.footer-contacts
	ul.contacts-list
		li.contacts-list__item
			a(href="tel:"+phone).item-title.title--hover=phone
			p.item-desc
				|Контактный телефон
		li.contacts-list__item
			a(href="mailto:"+mail).item-title.title--hover=mail
			p.item-desc
				|По любым вопросам
		li.contacts-list__item
			h4.item-title=address
			p.item-desc
				|Адрес офиса
		li.contacts-list__item
			.social-block
				a(href="#!").social-block__item
					+icon("telegram","social-icons")
				a(href="#!").social-block__item
					+icon("whatsapp","social-icons")
				a(href="#!").social-block__item
					+icon("facebook","social-icons")
				a(href="#!").social-block__item
					+icon("instagram","social-icons")
	.misc-contacts
		button.btn.misc-contacts__item(data-makecall="") #[+icon("phone","btn-icons")] Обратный звонок